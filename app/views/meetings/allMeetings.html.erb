              html: { method: :delete }) do |f| %>
   <%= f.submit "LEAVE", class: "btn btn-large" %>
 <% end %>
  <% else %>
    <%= form_for(current_user.relates.build(followed_id: meeting.id)) do |f| %>
  <div><%= f.hidden_field :followed_id %></div>
  <%= f.submit "JOIN", class: "btn btn-large btn-primary" %>
<% end %>
  <% end %>

<% end %> 

</div>
</div>





<%end %>